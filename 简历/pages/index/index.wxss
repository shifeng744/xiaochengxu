
.top{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 80rpx;
}
.top text{
    margin-bottom: 50rpx;
}
.top image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 100%;
}
.top text{
  margin-top: 50rpx;
}
.title{

  padding: 15rpx;
  display: flex;
  align-content: center;
  background: #ccc;
}
.title text{
  margin-left: 10rpx;
}
.line{
  display: block;
  width: 8rpx;
  height: 40rpx;
  background:red;
}
.text{
  font-size: 30rpx;
  display: block;
  padding: 20rpx;
  text-align: justify;
}
.music{
  position: fixed;
  right: 40rpx;
  top: 40rpx;
}
.music image{
  height: 90rpx;
  width: 90rpx;
}
.rotat{
  animation: 2s donghua linear infinite;
}
@keyframes donghua{
  from{
    transform: rotate(0deg);
  }
  to{
    transform: rotate(360deg);
  }
}
.kf{
  background: red;
  position: relative;
  overflow: hidden;
  height: 70rpx;
  padding-left: 10rpx;
}
.kf contact-button{
  opacity: 0;
  margin-top: 10rpx;
}
.kf text{
  position: absolute;
  top: 5rpx;
  left: 50%;
  margin-left: -48rpx;
  color: #fff;
}
