.nav{
  display: flex;
}
.nav text{
  flex: auto;
  text-align: center;
  line-height: 100rpx;
}
.cur{
  color: #33c27d;
  border-bottom: 5rpx solid #31c27c;
}
.container{
  padding: 10rpx 10rpx;

}
.container .con-list{
  display: flex;
  background: #fff;
  overflow: hidden;
  margin: 20rpx
}
.container .con-list .left image{
  width: 220rpx;
  height: 220rpx;
  margin-right: 20rpx;
}
.container .con-list .right{
   display: flex;
   flex-direction: column;
   line-height: 50rpx;
   overflow: hidden;
   text-overflow: ellipsis;
   white-space: nowrap;
}
.container .con-list .right .bin{
     overflow: hidden;
   text-overflow: ellipsis;
   white-space: nowrap;
   color: #ccc;
}
.container .con-list .right .title{
  margin-top: 10rpx;
  font-size: 36rpx

}
.container .con-list .right .nubmer{
  color:#999;
  margin-right: 10rpx;
  font-size: 33rpx;
}
.container .con-list .right .songname{
  font-size: 34rpx;
  color: #000;
}
.container .con-list .right .songer{
  color:#ccc;
  font-size: 33rpx;
  
}


/*搜索*/
.search{
  flex: auto;
  display: flex;
  flex-direction: column;
  background: #fff;
}
.search-bar{
  flex: none;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  background: #f4f4f4;
}
.search-wrap{
  position: relative;
  flex: auto;
  display: flex;
  align-items: center;
  height: 80rpx;
  padding: 0 20rpx;
  background: #fff;
  border-radius: 6rpx;
}
.search-wrap .icon-search{
  margin-right: 10rpx;
}
.search-wrap .search-input{
  flex: auto;
  font-size: 28rpx;
}
.search-cancel{
  padding: 0 20rpx;
  font-size: 28rpx;
}

/*热门关键词*/
.search-hot{
  padding: 30rpx;
}
.hot-title{
  display: block;
  margin-bottom: 16rpx;
  font-weight: bold;
  font-size: 28rpx;
  color: rgba(0,0,0,.6);
}
.hot-wrap{
  display: flex;
  flex-wrap: wrap;
}
.hot-item{
  margin-right: 28rpx;
  margin-bottom: 20rpx;
  padding: 0 20rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  color: #000;
  border: 2rpx solid rgba(0,0,0,.6);
  border-radius: 200rpx;
}
.hot-item:nth-child(1){
    color: #fc4524;
  border-color: #fc4524;
}

/*搜索结果  */
	.result-item{
  position: relative;
  display: flex;
  flex-direction: column;
  padding: 20rpx 0 20rpx 110rpx;
  overflow: hidden;
  border-bottom: 2rpx solid #e5e5e5;
}
.result-item .icon{
  position: absolute;
  top: 36rpx;
  left: 36rpx;
  width: 44rpx;
  height: 40rpx;
  background: url(data:image/png;base64,) no-repeat;
  background-size: contain;
}
.result-item .icon.nocopyright:after{
  content: '';    
  position: absolute;
  width: 20rpx;
  height: 20rpx;
  bottom: 0;
  right: -2rpx;
  background: #fff url(data:image/png;base64,) no-repeat;
  background-size: contain;
}
.result-item .media{
  position: absolute;
  left: 16rpx;
  top: 24rpx;
  width: 60rpx;
  height: 60rpx;
}

.result-item .title,
.result-item .subtitle{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 36rpx;
}
.result-item .title{
  margin-bottom: 4rpx;
  color: #000;
}
.result-item .subtitle{
  color: #808080;
  font-size: 24rpx;
}
.result-item:first-child .subtitle text{
  margin-right: 20rpx;
}
.result-item:not(:first-child) .subtitle text:not(:first-child):before{
  content: '/';
  margin: 0 8rpx;
}
